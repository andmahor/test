{
  "title": "JSON schema for NPM package.json files",
  "definitions": {
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    }
  },
  "properties": {
    "name": {
      "description": "The name of the package.",
      "type": "string"
    },
    "fields": {
      "description": "The name of the package.",
      "type": "string"
    },
    "version": {
      "description": "The name of the package.",
      "type": "string"
    },
    "type": {
      "anyOf": [
        {
          "$ref": "#/definitions/simpleTypes"
        },
        {
          "type": "object",
          "allOf": [
            {
              "not": {
                "type": "array"
              }
            },
            {
              "properties": {
                "$ref": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": ["$ref"]
            }
          ]
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/simpleTypes"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    }
    
  }
}
